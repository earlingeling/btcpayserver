@using BTCPayServer.Views.Server
@model CheckoutProvidersSettings
@{
    ViewData["Title"] = "Checkout Provider Settings";
    ViewData.SetActivePage(ServerNavPages.CheckoutProviders, StringLocalizer["Checkout Provider Settings"]);
    Layout = "../Shared/_Layout.cshtml";
    var availableCountries = new[] { "Norway", "Sweden", "Denmark", "Other" };
}

@section PageFootContent {
    <partial name="_ValidationScriptsPartial" />
}

<form method="post">
    <div class="sticky-header">
        <h2>@ViewData["Title"]</h2>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-outline-primary" name="command" value="add-provider">
                <i class="fas fa-plus me-1"></i>Add Provider
            </button>
            <button id="page-primary" type="submit" class="btn btn-primary" name="command" value="Save">Save Settings</button>
        </div>
    </div>
    <partial name="_StatusMessage" />

    <div class="row">
        <div class="col-xl-10 col-xxl-constrain">
            @for (int providerIndex = 0; providerIndex < Model.Providers.Count; providerIndex++)
            {
                var provider = Model.Providers[providerIndex];
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">@provider.Name</h5>
                            <button type="submit" class="btn btn-sm btn-outline-danger" name="command" value="remove-provider:@providerIndex">
                                <i class="fas fa-trash me-1"></i>Remove Provider
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Basic Provider Settings -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Providers[providerIndex].Name" class="form-label"></label>
                                    <input asp-for="Providers[providerIndex].Name" class="form-control" />
                                    <span asp-validation-for="Providers[providerIndex].Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Providers[providerIndex].Icon" class="form-label"></label>
                                    <input asp-for="Providers[providerIndex].Icon" class="form-control" placeholder="fas fa-coins" />
                                    <div class="form-text">FontAwesome icon class (e.g., fas fa-coins)</div>
                                    <span asp-validation-for="Providers[providerIndex].Icon" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Providers[providerIndex].ButtonClass" class="form-label"></label>
                                    <input asp-for="Providers[providerIndex].ButtonClass" class="form-control" placeholder="btn btn-success btn-sm" />
                                    <div class="form-text">Bootstrap button classes (e.g., btn btn-success btn-sm)</div>
                                    <span asp-validation-for="Providers[providerIndex].ButtonClass" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Providers[providerIndex].FeeText" class="form-label"></label>
                                    <input asp-for="Providers[providerIndex].FeeText" class="form-control" placeholder="3-8% avgift" />
                                    <span asp-validation-for="Providers[providerIndex].FeeText" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Providers[providerIndex].BadgeIcon" class="form-label"></label>
                                    <input asp-for="Providers[providerIndex].BadgeIcon" class="form-control" placeholder="fas fa-star text-warning" />
                                    <div class="form-text">Optional badge icon (e.g., fas fa-star text-warning)</div>
                                    <span asp-validation-for="Providers[providerIndex].BadgeIcon" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Enabled Countries</label>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var country in availableCountries)
                                        {
                                            var isChecked = provider.EnabledCountries?.Contains(country) == true;
                                            <div class="form-check">
                                                <input type="checkbox" 
                                                       name="Providers[@providerIndex].EnabledCountries" 
                                                       value="@country" 
                                                       class="form-check-input" 
                                                       @(isChecked ? "checked" : "") />
                                                <label class="form-check-label">@country</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Translations Section -->
                        <div class="border-top pt-4">
                            <h6 class="mb-3">Translations</h6>
                            
                            <!-- Intro Text -->
                            <div class="mb-4">
                                <label class="form-label">Intro Text</label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">English</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.IntroText.English" 
                                                      class="form-control" rows="3" 
                                                      placeholder="Enter intro text in English..."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Norwegian</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.IntroText.Norwegian" 
                                                      class="form-control" rows="3" 
                                                      placeholder="Enter intro text in Norwegian..."></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Swedish</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.IntroText.Swedish" 
                                                      class="form-control" rows="3" 
                                                      placeholder="Enter intro text in Swedish..."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Danish</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.IntroText.Danish" 
                                                      class="form-control" rows="3" 
                                                      placeholder="Enter intro text in Danish..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Outro Text -->
                            <div class="mb-4">
                                <label class="form-label">Outro Text (Optional)</label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">English</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.OutroText.English" 
                                                      class="form-control" rows="2" 
                                                      placeholder="Enter outro text in English..."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Norwegian</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.OutroText.Norwegian" 
                                                      class="form-control" rows="2" 
                                                      placeholder="Enter outro text in Norwegian..."></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Swedish</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.OutroText.Swedish" 
                                                      class="form-control" rows="2" 
                                                      placeholder="Enter outro text in Swedish..."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Danish</label>
                                            <textarea asp-for="Providers[providerIndex].Translations.OutroText.Danish" 
                                                      class="form-control" rows="2" 
                                                      placeholder="Enter outro text in Danish..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Steps -->
                            <div class="mb-4">
                                <label class="form-label">Step Instructions</label>
                                @for (int stepIndex = 0; stepIndex < provider.Translations.Steps.Count; stepIndex++)
                                {
                                    var step = provider.Translations.Steps[stepIndex];
                                    <div class="border rounded p-3 mb-3">
                                        <div class="d-flex align-items-center justify-content-between mb-2">
                                            <h6 class="mb-0">Step @step.StepNumber</h6>
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeStep(@providerIndex, @stepIndex)">
                                                <i class="fas fa-trash me-1"></i>Remove Step
                                            </button>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label">English</label>
                                                    <textarea name="Providers[@providerIndex].Translations.Steps[@stepIndex].StepText.English" 
                                                              class="form-control" rows="2">@step.StepText.English</textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label">Norwegian</label>
                                                    <textarea name="Providers[@providerIndex].Translations.Steps[@stepIndex].StepText.Norwegian" 
                                                              class="form-control" rows="2">@step.StepText.Norwegian</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label">Swedish</label>
                                                    <textarea name="Providers[@providerIndex].Translations.Steps[@stepIndex].StepText.Swedish" 
                                                              class="form-control" rows="2">@step.StepText.Swedish</textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label class="form-label">Danish</label>
                                                    <textarea name="Providers[@providerIndex].Translations.Steps[@stepIndex].StepText.Danish" 
                                                              class="form-control" rows="2">@step.StepText.Danish</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="hidden" name="Providers[@providerIndex].Translations.Steps[@stepIndex].StepNumber" value="@step.StepNumber" />
                                    </div>
                                }
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="addStep(@providerIndex)">
                                    <i class="fas fa-plus me-1"></i>Add Step
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.Providers.Count == 0)
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-info-circle me-2"></i>No providers configured. Click "Add Provider" to get started.
                </div>
            }
        </div>
    </div>
</form>

<script>
function addStep(providerIndex) {
    // This would need JavaScript to dynamically add step fields
    // For now, we'll handle this server-side
    const form = document.createElement('form');
    form.method = 'post';
    form.innerHTML = `
        <input type="hidden" name="command" value="add-step:${providerIndex}">
    `;
    document.body.appendChild(form);
    form.submit();
}

function removeStep(providerIndex, stepIndex) {
    const form = document.createElement('form');
    form.method = 'post';
    form.innerHTML = `
        <input type="hidden" name="command" value="remove-step:${providerIndex}:${stepIndex}">
    `;
    document.body.appendChild(form);
    form.submit();
}
</script>
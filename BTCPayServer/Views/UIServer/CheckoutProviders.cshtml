@using BTCPayServer.Models.ServerViewModels
@model CheckoutProvidersSettings
@{
    ViewData.SetActivePage(ServerNavPages.CheckoutProviders, "Checkout Providers");
}

<div class="row">
    <div class="col-lg-8">
        <h3 class="mb-4">@ViewData["Title"]</h3>
    </div>
</div>

<form method="post">
    <div class="row">
        @for (int i = 0; i < Model.Providers.Count; i++)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Provider @(i + 1)</h5>
                        <button type="submit" name="command" value="remove-provider" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to remove this provider?')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Providers[i].Name" class="form-label">Provider Name</label>
                                    <input asp-for="Providers[i].Name" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Providers[i].Icon" class="form-label">Icon Class</label>
                                    <input asp-for="Providers[i].Icon" class="form-control" placeholder="fas fa-coins" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Providers[i].ButtonClass" class="form-label">Button Style</label>
                                    <select asp-for="Providers[i].ButtonClass" class="form-select">
                                        <option value="btn btn-primary">Primary (Blue)</option>
                                        <option value="btn btn-secondary">Secondary (Gray)</option>
                                        <option value="btn btn-success">Success (Green)</option>
                                        <option value="btn btn-warning">Warning (Yellow)</option>
                                        <option value="btn btn-danger">Danger (Red)</option>
                                        <option value="btn btn-outline-primary">Outline Primary</option>
                                        <option value="btn btn-outline-secondary">Outline Secondary</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Providers[i].FeeText" class="form-label">Fee Text</label>
                                    <input asp-for="Providers[i].FeeText" class="form-control" placeholder="3-8% avgift" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Providers[i].BadgeIcon" class="form-label">Badge Icon</label>
                                    <input asp-for="Providers[i].BadgeIcon" class="form-control" placeholder="fas fa-star" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Enabled Countries</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Providers[@i].EnabledCountries" value="Norway" 
                                               @(Model.Providers[i].EnabledCountries?.Contains("Norway") == true ? "checked" : "") />
                                        <label class="form-check-label">Norway</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Providers[@i].EnabledCountries" value="Sweden" 
                                               @(Model.Providers[i].EnabledCountries?.Contains("Sweden") == true ? "checked" : "") />
                                        <label class="form-check-label">Sweden</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Providers[@i].EnabledCountries" value="Denmark" 
                                               @(Model.Providers[i].EnabledCountries?.Contains("Denmark") == true ? "checked" : "") />
                                        <label class="form-check-label">Denmark</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Providers[@i].EnabledCountries" value="Other" 
                                               @(Model.Providers[i].EnabledCountries?.Contains("Other") == true ? "checked" : "") />
                                        <label class="form-check-label">Other</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Translations -->
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Intro Text</h6>
                                <div class="mb-2">
                                    <label class="form-label">English</label>
                                    <textarea asp-for="Providers[i].Translations.IntroText.English" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Norwegian</label>
                                    <textarea asp-for="Providers[i].Translations.IntroText.Norwegian" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label class="form-label">Swedish</label>
                                    <textarea asp-for="Providers[i].Translations.IntroText.Swedish" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Danish</label>
                                    <textarea asp-for="Providers[i].Translations.IntroText.Danish" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Steps -->
                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6>Steps</h6>
                                <button type="submit" name="command" value="add-step" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-plus"></i> Add Step
                                </button>
                            </div>
                            @for (int j = 0; j < Model.Providers[i].Translations.Steps.Count; j++)
                            {
                                <div class="card mb-2">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Step @Model.Providers[i].Translations.Steps[j].StepNumber</h6>
                                        <button type="submit" name="command" value="remove-step" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to remove this step?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-2">
                                                    <label class="form-label">English</label>
                                                    <textarea name="Providers[@i].Translations.Steps[@j].StepText.English" class="form-control" rows="2">@Model.Providers[i].Translations.Steps[j].StepText.English</textarea>
                                                </div>
                                                <div class="mb-2">
                                                    <label class="form-label">Norwegian</label>
                                                    <textarea name="Providers[@i].Translations.Steps[@j].StepText.Norwegian" class="form-control" rows="2">@Model.Providers[i].Translations.Steps[j].StepText.Norwegian</textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-2">
                                                    <label class="form-label">Swedish</label>
                                                    <textarea name="Providers[@i].Translations.Steps[@j].StepText.Swedish" class="form-control" rows="2">@Model.Providers[i].Translations.Steps[j].StepText.Swedish</textarea>
                                                </div>
                                                <div class="mb-2">
                                                    <label class="form-label">Danish</label>
                                                    <textarea name="Providers[@i].Translations.Steps[@j].StepText.Danish" class="form-control" rows="2">@Model.Providers[i].Translations.Steps[j].StepText.Danish</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Outro Text -->
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <h6>Outro Text</h6>
                                <div class="mb-2">
                                    <label class="form-label">English</label>
                                    <textarea asp-for="Providers[i].Translations.OutroText.English" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Norwegian</label>
                                    <textarea asp-for="Providers[i].Translations.OutroText.Norwegian" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label class="form-label">Swedish</label>
                                    <textarea asp-for="Providers[i].Translations.OutroText.Swedish" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Danish</label>
                                    <textarea asp-for="Providers[i].Translations.OutroText.Danish" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between">
                <button type="submit" name="command" value="add-provider" class="btn btn-outline-primary">
                    <i class="fas fa-plus me-2"></i>Add Provider
                </button>
                <button type="submit" name="command" value="save" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
</form>